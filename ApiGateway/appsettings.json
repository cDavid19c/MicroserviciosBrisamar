{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },
    "AllowedHosts": "*",
    "Jwt": {
        "Key": "HotelMicroservicesSecretKey2024!@#$%^&*()_+",
        "Issuer": "HotelMicroservices",
        "Audience": "HotelMicroservicesClients",
        "ExpireMinutes": 60
    },
    "Integrations": {
        "RecaApi": {
            "BaseUrl": "http://restbrisamar.runasp.net/"
        }
    },
    "GrpcServices": {
        "ReservasService": "https://brisamarreservasservice.onrender.com"
    },
    "ReverseProxy": {
        "Routes": {
            "catalogos-route": {
                "ClusterId": "catalogos-cluster",
                "Match": {
                    "Path": "/api/catalogos/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/api/catalogos"
                    },
                    {
                        "PathPrefix": "/api"
                    }
                ]
            },
            "habitaciones-route": {
                "ClusterId": "habitaciones-cluster",
                "Match": {
                    "Path": "/graphql/{**catch-all}"
                }
            },
            "habitaciones-ui-route": {
                "ClusterId": "habitaciones-cluster",
                "Match": {
                    "Path": "/graphql-ui/{**catch-all}"
                }
            },
            "reservas-route": {
                "ClusterId": "reservas-cluster",
                "Match": {
                    "Path": "/grpc/{**catch-all}"
                }
            },
            "usuarios-pagos-route": {
                "ClusterId": "usuarios-pagos-cluster",
                "Match": {
                    "Path": "/api/usuarios-pagos/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/api/usuarios-pagos"
                    },
                    {
                        "PathPrefix": "/api"
                    }
                ]
            }
        },
        "Clusters": {
            "catalogos-cluster": {
                "Destinations": {
                    "catalogos-service": {
                        "Address": "http://brisamarcatalogosservice.onrender.com"
                    }
                }
            },
            "habitaciones-cluster": {
                "Destinations": {
                    "habitaciones-service": {
                        "Address": "http://brisamarhabitacionesservice.onrender.com"
                    }
                }
            },
            "reservas-cluster": {
                "Destinations": {
                    "reservas-service": {
                        "Address": "http://brisamarreservasservice.onrender.com"
                    }
                }
            },
            "usuarios-pagos-cluster": {
                "Destinations": {
                    "usuarios-pagos-service": {
                        "Address": "http://brisamarpagosservice.onrender.com"
                    }
                }
            }
        }
    }
}